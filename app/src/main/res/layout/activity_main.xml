<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.asiapacificmbank.MainActivity"
    android:background="@drawable/backgroundgrad" >


    <ImageView
        android:id="@+id/header"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logofinal"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Welcome to Asia Pacific Bank"
        android:layout_gravity="center"
        android:textSize="28dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LinearLayout1"
        android:gravity="center">

        <Button
            android:id="@+id/loginButton"
            android:text="Login"
            android:layout_marginTop="0dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="onCLick"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in to your account \nMake payments/transfer and more"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/cBalance"
            android:text="Check Balance"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Check account balance only"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:onClick="cBalanceClick"
            />

    </LinearLayout>

</LinearLayout>
